<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mainscreen"
    android:background="#FFFFFF"
    >

    <ImageView
        android:id="@+id/parking_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/parkingimage"
        app:layout_constraintTop_toBottomOf="@id/button"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="99dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="뒤로가기"
        android:textColor="#FFBF00"

        />

    <Button
        android:id="@+id/mypage_button"
        android:layout_width="108dp"
        android:layout_height="75dp"
        android:text="마이페이지"
        android:textColor="#FFBF00"

        app:layout_constraintTop_toBottomOf="@id/parking_image"
         />

    <Button
        android:id="@+id/Reservation_button"
        android:layout_width="108dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="예약 현황"
        android:textColor="#FFBF00"
        app:layout_constraintTop_toBottomOf="@id/parking_image"
        app:layout_constraintRight_toRightOf="@id/parking_image"
         />


</androidx.constraintlayout.widget.ConstraintLayout>